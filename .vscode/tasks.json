{
    "version": "2.0.0",
    "tasks": [        
        {
            "label": "Build GDExtension Lib",
            "type": "cargo",
            "command": "build",
            "args": [
                "--manifest-path",
                "rust/Cargo.toml"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "(win) Copy GDExtension Lib",
            "type": "shell",
            "command": "cp",
            "args": [
                "rust/target/debug/decentraland_godot_lib.dll",
                "godot/lib"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "dependsOn": "Build GDExtension Lib"
        }
    ]
}